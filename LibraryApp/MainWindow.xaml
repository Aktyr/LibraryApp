<Window x:Class="LibraryApp.MainWindow" x:Name="This"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="64*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20,20,20,20" Visibility="Visible" >

            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"
                    Content="New User" Click="Button_Click_NewUser"/>

            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"           
                    Content="New Book" Click="Button_Click_NewBook"/>

            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"                         
                    Content="New Room" Click="Button_Click_NewRoom"/>

            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"                         
                    Content="Give Book" Click="Button_Click_BookIssuing"/>

            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"                         
                    Content="Add Book" Click="Button_Click_AddBook"/>

            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"
                    Content="Show Issues" Click="Button_Click_ShowIssues"/>

        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20,20,20,20" Visibility="Visible" >
            
            <Button HorizontalAlignment="Stretch" Margin="0,5" Padding="0, 5"                         
                    Content="Admin menu" Click="Button_Click_Admin"/>            

        </StackPanel>

    </Grid>
</Window>
