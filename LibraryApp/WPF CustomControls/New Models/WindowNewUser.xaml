<Window x:Class="LibraryApp.WindowNewUser" x:Name="This"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        xmlns:behaviors="clr-namespace:LibraryApp.WPF_CustomControls"
        
        behaviors:WindowBehaviors.CloseOnEsc="True"

        mc:Ignorable="d"
        Title="WindowNewUser" Height="300" Width="250">
    <Grid>
        <StackPanel Margin="20,20,20,20" Visibility="Visible" >

            <TextBox x:Name="LastNameTextBox"
                     Text="{Binding User.LastName, ElementName=This, Mode=TwoWay}"
                     behaviors:TextBoxHelper.Placeholder="Фамилия*" 
                     behaviors:FieldNavigationHelper.EnableEnterNavigation="True"
                     behaviors:FieldNavigationHelper.AutoFocus="True"
                     HorizontalAlignment="Stretch" Margin="0,5"/>

            <TextBox x:Name="FirstNameTextBox"
                     Text="{Binding User.FirstName, ElementName=This, Mode=TwoWay}"
                     behaviors:TextBoxHelper.Placeholder="Имя*" 
                     behaviors:FieldNavigationHelper.EnableEnterNavigation="True"
                     HorizontalAlignment="Stretch" Margin="0,5"/>

            <TextBox x:Name="MiddleNameTextBox"
                     Text="{Binding User.MiddleName, ElementName=This, Mode=TwoWay}"
                     behaviors:TextBoxHelper.Placeholder="Отчество" 
                     behaviors:FieldNavigationHelper.EnableEnterNavigation="True"
                     HorizontalAlignment="Stretch" Margin="0,5"/>

            <TextBox x:Name="ContactInfoTextBox" 
                     Text="{Binding User.ContactInfo, ElementName=This, Mode=TwoWay}"
                     behaviors:TextBoxHelper.Placeholder="Контактная информация*" 
                     behaviors:FieldNavigationHelper.EnableEnterNavigation="True"
                     HorizontalAlignment="Stretch" Margin="0,5" 
                     TextWrapping="Wrap"/>

            <Button x:Name="AddButton" 
                    HorizontalAlignment="Stretch"  Margin="0, 5"  Padding="0, 5" 
                    Content="Add" Click="Button_Click"
                    IsDefault="True"/>



        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20,20,20,20" Visibility="Visible"/>
    </Grid>
</Window>
