<UserControl x:Class="LibraryApp.WPF_CustomControls.RoomTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.WPF_CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:NullToFalseConverter x:Key="NullToFalseConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>

        <DataGrid Grid.RowSpan="1" Grid.ColumnSpan="1" Margin="20,20,20,20"
           x:Name="dataGrid" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding RoomList, Mode=OneWay}" 
           ScrollViewer.CanContentScroll="True"
           ScrollViewer.HorizontalScrollBarVisibility="Auto"
           ScrollViewer.VerticalScrollBarVisibility="Auto"
           SelectionMode="Single">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Название" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Кол-во книг" Binding="{Binding SumOfBooks}" />

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Margin="5, 5"/>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="-10,20,5,5">

            <Button  HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
              Content="Новая комната" Click="AddRoomButton_Click"/>

            <Separator Margin="0, 0, 0, 5" />

            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Добавить книгу в комнату" Click="AddBookButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>


            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Просмотр и добавление" Click="ShowBooksButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

            <Separator Margin="0, 0, 0, 5" />


            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Удалить" Click="DeleteRoomButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Редактировать" Click="EditRoomButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

        </StackPanel>

    </Grid>
</UserControl>
