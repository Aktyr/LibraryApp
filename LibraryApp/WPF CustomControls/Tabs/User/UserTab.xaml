<UserControl x:Class="LibraryApp.WPF_CustomControls.UserTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.WPF_CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:NullToFalseConverter x:Key="NullToFalseConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>

        <DataGrid Grid.RowSpan="1" Grid.ColumnSpan="1" Margin="20,20,20,20"
                  x:Name="dataGrid" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding UserList, Mode=OneWay}" 
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>

                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" />
                <DataGridTextColumn Header="Контактная информация" Binding="{Binding ContactInfo}" />

                <DataGridTextColumn Header="Ближайшая сдача">
                    <DataGridTextColumn.Binding>
                        <Binding Path="NearestReturnDate">
                            <Binding.TargetNullValue>
                                Нет долгов
                            </Binding.TargetNullValue>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Margin="5,5,5,5"/>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="-10,20,5,5">

            <Button  HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                     Content="Новый пользователь" Click="AddUserButton_Click"/>

            <Separator Margin="0, 0, 0, 5" />

            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Выдать книгу" Click="AddBookButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Просмотр выдач" Click="ShowBooksButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

            <Separator Margin="0, 0, 0, 5" />


            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Удалить" Click="DeleteUserButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

            <Button HorizontalAlignment="Stretch" Padding="0, 5" Margin="0, 0, 0, 5" 
                    Content="Редактировать" Click="EditUserButton_Click" 
                    IsEnabled="{Binding ElementName=dataGrid, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}"/>

        </StackPanel>

    </Grid>
</UserControl>
