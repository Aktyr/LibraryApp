<Window x:Class="LibraryApp.WPF_CustomControls.Admin_menu.WindowСhangeRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp.WPF_CustomControls.Admin_menu"
        mc:Ignorable="d"
        Title="WindowСhangeRoom" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20,20" Visibility="Visible">
            <DataGrid x:Name="dataGrid" IsReadOnly="False" AutoGenerateColumns="True" ItemsSource="{Binding Rooms}">
                <DataGrid.Columns>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20,0" Visibility="Visible">

            <Button  Margin="0, 5" Padding="0, 5"
                     Content="Сохранить изменения" Click="Button_Click" />

        </StackPanel>

    </Grid>
</Window>
