<Window x:Class="LibraryApp.WindowNewRoom" x:Name="This"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="WindowNewRoom" Height="300" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20,20,20,20" Visibility="Visible" >

            <TextBlock TextWrapping="Wrap" 
                       Text="Сreate new Room"/>

            <TextBox Text="{Binding Room.Name, ElementName=This, Mode=TwoWay}"
                     HorizontalAlignment="Stretch" Margin="0,5" />

            <Button  HorizontalAlignment="Stretch"  Margin="0,5" Padding="0, 5"  
                     Content="Add Room" Click="Button_AddRoom"/>

            <TextBlock TextWrapping="Wrap" Margin="0,10"  
                       Text="Add RoomBook in Room"/>

            <ComboBox ItemsSource="{Binding Room, ElementName=This, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      Text="Rooms"
                      HorizontalAlignment="Stretch"
                      SelectedValuePath="Code"
                      IsEditable="True" IsReadOnly="True"/>

            <TextBox Text="{Binding RoomBook.Name, ElementName=This, Mode=TwoWay}"
                     HorizontalAlignment="Stretch" Margin="0,5" 
                     x:Name="textBox_RoomBook"/>

            <Button  HorizontalAlignment="Stretch"  Margin="0,5" Padding="0, 5"  
                     Content="Add RoomBook" Click="Button_AddRoomBook"/>

        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20,20,20,20" Visibility="Visible">
            
            <ListBox Height="100" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        </StackPanel>

    </Grid>
</Window>
